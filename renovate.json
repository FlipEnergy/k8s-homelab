{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "helm-values": {
    "enabled": true,
    "fileMatch": [
      "(^|/)values\\.yaml$",
      "(^|/).*-values\\.yaml$",
    ],
  },
  "helmsman": {
    "enabled": true,
    "fileMatch": ["homelab.yaml", "oracle.yaml"]
  }
}
